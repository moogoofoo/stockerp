# .env.example - environment variables for StockERP

# Database settings
DB_HOST=localhost
DB_PORT=3306
DB_NAME=stockerp
DB_USER=stockerp
DB_PASSWORD=your_password

# API server settings
API_HOST=0.0.0.0
API_PORT=58643
# API_URL can be used by dashboard or external clients; defaults to http://localhost:${API_PORT}
#API_URL=http://localhost:58643

# Dashboard server settings
DASH_HOST=0.0.0.0
DASH_PORT=52643

# ERPNext integration (optional)
ERPNEXT_API_KEY=your_api_key
ERPNEXT_API_SECRET=your_api_secret
ERPNEXT_URL=https://your.erpnext.site
